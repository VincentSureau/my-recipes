{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block body %}
<main class="container d-flex flex-column">
    <h1 class="text-center">Recipe index</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Level</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.name }}</td>
                <td>{{ recipe.description }}</td>
                <td class="text-nowrap text-center">
                    {% for i in 1..recipe.level -%}üå∂Ô∏è{%- endfor %}
                </td>
                <td>{{ recipe.image }}</td>
                <td class="d-flex flex-column">
                    <a class="btn btn-primary" href="{{ path('app_recipe_crud_show', {'id': recipe.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_recipe_crud_edit', {'id': recipe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_recipe_crud_new') }}">Create new</a>
</main>    
{% endblock %}
