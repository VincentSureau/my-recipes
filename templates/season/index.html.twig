{% extends 'base.html.twig' %}

{% block title %}Season index
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-center align-items-center gap-5">
		<h1 class=" py-3">Saisons</h1>
		<a class="btn btn-success" href="{{ path('app_season_new') }}">Create new
			<i class="fa-solid fa-plus ms-3"></i>
		</a>
	</div>

	<div class="table-responsive container">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>StartAt</th>
					<th>EndAt</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for season in seasons %}
					<tr>
						<td>{{ season.id }}</td>
						<td>{{ season.name }}</td>
						<td>{{ season.startAt ? season.startAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ season.endAt ? season.endAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>
							<div class="d-flex justify-content-center align-items-center gap-2">
								<a class="btn btn-success" href="{{ path('app_season_show', {'id': season.id}) }}">
									<i class="fa-solid fa-eye"></i>
								</a>
								<a class="btn btn-success" href="{{ path('app_season_edit', {'id': season.id}) }}">
									<i class="fa-solid fa-pen"></i>
								</a>
							</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
