{% extends 'base.html.twig' %}

{% block title %}Recettes
{% endblock %}

{% block body %}
	<header>
		<h1 class="text-center shadow">NOS RECETTES</h1>
		<div class="searchFilter d-flex flex-column">
			<div class="searchBar">
				<form class="d-flex" role="search">
					<input class="form-control me-2" name="search" type="search" placeholder="Search" aria-label="Search">
					<button class="btn btn-outline-success" name="send" type="submit">Search</button>
				</form>
			</div>
			
			<div class="sortBtn d-flex justify-content-center flex-wrap">
			
				<div class="btn-group">
					<button type="button" class="btn btn-success">Saison</button>
					<button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
						<span class="visually-hidden">Toggle Dropdown</span>
					</button>
					<ul class="dropdown-menu">
						<li>
							<a class="dropdown-item" href="#">Été</a>
						</li>
						<li>
							<a class="dropdown-item" href="#">Printemps</a>
						</li>
						<li>
							<a class="dropdown-item" href="#">Automne</a>
						</li>
						<li>
							<a class="dropdown-item" href="#">Hiver</a>
						</li>
					</ul>
				</div>
				<div class="btn-group">
					<button type="button" class="btn btn-success">Plat</button>
					<button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
						<span class="visually-hidden">Toggle Dropdown</span>
					</button>
					<ul class="dropdown-menu">
						<li>
							<a class="dropdown-item" href="#">Entrée</a>
						</li>
						<li>
							<a class="dropdown-item" href="#">Plat</a>
						</li>
						<li>
							<a class="dropdown-item" href="#">Dessert</a>
						</li>
						<li>
							<a class="dropdown-item" href="#">Gourmandises</a>
						</li>
					</ul>

				</div>
				<div class="btn-group">
					<button type="button" class="btn btn-success">Niveau</button>
					<button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
						<span class="visually-hidden">Toggle Dropdown</span>
					</button>
					<ul class="dropdown-menu">
						<li>
							<a class="dropdown-item" href="#">Facile</a>
						</li>
						<li>
							<a class="dropdown-item" href="#">Intermédiaire</a>
						</li>
						<li>
							<a class="dropdown-item" href="#">Difficile</a>
						</li>
						<li>
							<a class="dropdown-item" href="#">Chef étoilé
							</a>
						</li>
					</ul>

				</div>
				<div class="btn-group">
					<button type="button" class="btn btn-success">Trier</button>
					<button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
						<span class="visually-hidden">Toggle Dropdown</span>
					</button>
					<ul class="dropdown-menu">
						<li>
							<a class="dropdown-item" href="#">Les plus aimés</a>
						</li>
						<li>
							<a class="dropdown-item" href="#">Les plus commentés</a>
						</li>
						<li>
							<a class="dropdown-item" href="#">Les plus récentes</a>
						</li>
					</ul>

				</div>
			</div>
		</div>
	</header>

	<main>
		<div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4 list">
			{% for recipe in pagination %}
				<div class="col" >
					<div class="card shadow mb-5 bg-body-tertiary rounded-4 image">
						<img src="{{ vich_uploader_asset(recipe, 'imageFile') }}" class="card-img-top" alt="image de la recette">
						<div class="card-body overflow-hidden">
							<h5 class="card-title text-center text-justify fs-5 text-success">{{recipe.name}}</h5>
							<p class="card-text">{{recipe.description}}</p>
						</div>
						<div class="d-flex justify-content-between info">
							{% for season in recipe.seasons %}
							<p class="saison">{{ season.name }}</p>
							{% endfor %}
							<span class="material-symbols-outlined">
								favorite
							</span>
						</div>
					</div>

				</div>
			{% endfor %}	
		</div>
			<div class="navigation d-flex justify-content-center">
				{{ knp_pagination_render(pagination) }}
			</div>
	</main>
{% endblock %}
