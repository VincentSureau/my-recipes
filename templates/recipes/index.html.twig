{% extends 'base.html.twig' %}

{% block title %}Recettes
{% endblock %}

{% block body %}
	<style>
		header {
			margin: auto;
			width: 50%;
		}

		.searchFilter {
			display: flex;
			justify-content: center;
			margin: 50px 0;
		}

		.searchBar {
			margin-right: 50px;
		}

		h1 {
			margin: 50px 0;
			font-family: 'Lobster', cursive;
			font-size: 4rem;
		}

		.container.text-center {
			margin-top: 50px;
		}

		.list {
			margin: auto;
			width: 80%;
		}

		.card {
			height: 450px; 
		}

		
	</style>

	<header>
		<h1 class="text-center text-success">NOS RECETTES</h1>
		<div class="searchFilter">
			<div class="searchBar">
				<form class="d-flex" role="search">
					<input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
					<button class="btn btn-outline-success" type="submit">Search</button>
				</form>
			</div>
			<div class="btn-group">
				<button type="button" class="btn btn-success">Trier</button>
				<button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
					<span class="visually-hidden">Toggle Dropdown</span>
				</button>
				<ul class="dropdown-menu">
					<li>
						<a class="dropdown-item" href="#">Saison</a>
					</li>
					<li>
						<a class="dropdown-item" href="#">Difficulté</a>
					</li>
					<li>
						<a class="dropdown-item" href="#">Salé</a>
					</li>
					<li>
						<a class="dropdown-item" href="#">Sucré</a>
					</li>
				</ul>
			</div>
		</div>
	</header>

	<main>
		<div class="row row-cols-1 row-cols-md-3 g-4 list">
			{% for recipe in recipes %}
				<div class="col">
					<div class="card border-success">
						<img src="{{recipe.image}}" class="card-img-top" alt="...">
						<div class="card-body">
							<h5 class="card-title">{{recipe.name}}</h5>
						</div>

					</div>
				</div>
			{% endfor %}
		</div>
	</main>

{% endblock %}
