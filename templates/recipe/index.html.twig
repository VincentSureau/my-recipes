{% extends 'base.html.twig' %}

{% block title %}Recipe index
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-center align-items-center gap-5">
		<h1 class=" py-3">Recettes</h1>
		<a class="btn btn-success" href="{{ path('app_recipe_new') }}">Create new
			<i class="fa-solid fa-plus ms-3"></i>
		</a>
	</div>
	<div class="table-responsive container">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Description</th>
					<th>Level</th>
					<th>Image</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for recipe in recipes %}
					<tr>
						<td>{{ recipe.id }}</td>
						<td>{{ recipe.name }}</td>
						<td>{{ recipe.description }}</td>
						<td>{{ recipe.level }}</td>
						<td>{{ recipe.image }}</td>
						<td>
							<div class="d-flex justify-content-center align-items-center gap-2">
								<a class="btn btn-success" href="{{ path('app_recipe_show', {'id': recipe.id}) }}">
									<i class="fa-solid fa-eye"></i>
								</a>
								<a class="btn btn-success" href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">
									<i class="fa-solid fa-pen"></i>
								</a>
							</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
        </div>

		
	{% endblock %}
