{% set title = "Liste des newsletters" %}
{% extends 'admin_with_table.html.twig' %}

{% block actions %}
<a class="btn btn-success" href="{{ path('app_admin_newsletter_new') }}">Ajouter</a>
{% endblock %}


{% block table_content %}
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenu</th>
                <th>Date d'envoi</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for newsletter in newsletters %}
            <tr>
                <td>{{ newsletter.id }}</td>
                <td>{{ newsletter.content|raw }}</td>
                <td>{{ newsletter.sendAt ? newsletter.sendAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    {# <a href="{{ path('app_admin_newsletter_show', {'id': newsletter.id}) }}">show</a> #}
                    <a class="btn btn-success" href="{{ path('app_admin_newsletter_edit', {'id': newsletter.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>

{% endblock %}
