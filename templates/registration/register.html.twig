{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
{% block stylesheets %}
	{{ parent() }}

	<link href="{{ asset('./contact_css/contact.css') }}" rel="stylesheet">
{% endblock %}

{% block javascripts  %}
	{{ parent() }}

	<script src="{{ asset('js/password.js') }}"></script>
{% endblock %}

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

{# ajout du css de la vue subscribed sur register #}
    	<div class="body_contact">
		<section class="contact_section">
			<div class="main">
				<div class="left left_subsribed">
					<div class="container_contact contain_sub">
						<h2>Nos créations <br>Originales</h2>
						<div class="container_link">
							<a href="" class="container_link_a">
								<br></a>
							<a href="" class="container_link_a">
								<br></a>
							<a href="" class="container_link_a"></a>
						</div>
					</div>
					<div class="logo_link">

						<div class="main_reseau">
							<li class="content_reseau">
								<a href="#">
									<i class="fab fa-facebook-f icon"></i>
								</a>
							</li>
							<li class="content_reseau">
								<a href="#">
									<i class="fab fa-pinterest icon"></i>
								</a>
							</li>
							<li class="content_reseau">
								<a href="#">
									<i class="fab fa-instagram icon"></i>
								</a>
							</li>
							<li class="content_reseau">
								<a href="#">
									<i class="fab fa-tiktok icon"></i>
								</a>
							</li>
						</div>
					</div>
				</div>

				<form class="right flex-grow-1 d-flex align-items-center">
					<h2>Inscription</h2>
					<div class="w-75">

						<div class="mb-3">
							<label for="exampleInputName" class="form-label sr-only"></label>
							{# <input type="name" class="form-control" id="exampleInputName" aria-describedby="emailHelp" placeholder="Pseudo"> #}
                            {{ form_row(registrationForm.username, {
                                'attr' : { class : 'form-control'}
                            }) }}
						</div>

						<div class="mb-3">
							<label for="exampleInputEmail1" class="form-label sr-only"></label>
							{# <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Adresse E-mail"> #}
                            {{ form_row(registrationForm.email, {
                                'attr' : { class : 'form-control'}
                            } ) }}
							<div id="emailHelp" class="form-text">Votre email ne sera jamais partagé.</div>
						</div>

						<div class="form-outline mb-3">
							<label class="form-label sr-only" for="typePhone"></label>
							{# <input type="password" id="password" class="form-control" placeholder="Mot de passe"></input> #}
                            {{ form_row(registrationForm.plainPassword, {
                                'attr' : {class: 'form-control'}
                                }) }}
							 <i class="bi bi-eye-slash show"  onclick="myFunction()"></i>
						</div>
						{# <div class="form-outline mb-3">
							<label class="form-label sr-only" for="typePhone"></label>
							<input type="password" id="typePhone" class="form-control" placeholder="confirmer le mot de passe"></input>
						</div> #}
						
						<button type="submit" class="btn btn-primary">Continue</button>
					</div>
					<div class="subBtn">
                        <div class="form-check form-switch">
							{# <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault"> #}
                            {{ form_row(registrationForm.agreeTerms, {
                                'attr' : { class : 'form-check-input'}
                            } ) }}
							<label class="form-check-label" for="flexSwitchCheckDefault"></label>
						</div>
						<div class="form-check form-switch">
							{# <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault"> #}
                            {{ form_row(registrationForm.is_subscribed, {
                                'attr' : { class : 'form-check-input'}
                            }  ) }}
							<label class="form-check-label" for="flexSwitchCheckDefault"></label>
						</div>
					
					</div>

				</form>
			</div>
		</section>
	</div>
{% endblock %}
