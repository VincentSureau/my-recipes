{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1 class="text-success">User index</h1>
    <div class="d-flex justify-content mb-3">
    <a class="btn btn-success mt-3 " href="{{ path('app_user_new') }}">Create new</a>
</div>

    
    <table class="table table-striped table-success table-hover text-center">
        <thead>
            <tr class="text-success">
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Username</th>
                <th>Avatar</th>
                <th>IsSubscribed</th>
                <th>IsVerified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.avatar }}</td>
                <td>{{ user.isSubscribed ? 'Yes' : 'No' }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}"><i class="fa-solid fa-magnifying-glass text-success px-1"></i></a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}"><i class="fa-regular fa-pen-to-square text-success px-1"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
