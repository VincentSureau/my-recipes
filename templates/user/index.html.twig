{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<h1 class="text-success text-center p-4">User index</h1>

		<div class="d-flex justify-content-center">
			<a class="btn btn-success mb-5" href="{{ path('app_user_new') }}"><span><i class="fa-solid fa-plus text-sucess px-2"></i></span>Ajouter un utilisateur</a>
		</div>

		<table class="table table-striped table-success table-hover text-center w-75 m-auto">
			<thead class="text-success">
				<tr>
					<th>Id</th>
					<th>Email</th>
					<th>Roles</th>
					<th>Password</th>
					<th>Username</th>
					<th>Avatar</th>
					<th>IsSubscribed</th>
					<th>IsVerified</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody class="text-body">
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						<td>{{ user.password }}</td>
						<td>{{ user.username }}</td>
						<td>{{ user.avatar }}</td>
						<td>{{ user.isSubscribed ? 'Yes' : 'No' }}</td>
						<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
						<td>
							<a href="{{ path('app_user_show', {'id': user.id}) }}">
								<i class="fa-solid fa-magnifying-glass text-success px-1"></i>
							</a>
							<a href="{{ path('app_user_edit', {'id': user.id}) }}">
								<i class="fa-regular fa-pen-to-square text-success px-1"></i>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="9">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
{% endblock %}
