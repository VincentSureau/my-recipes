{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center gap-5 my-3">
        <a class="btn btn-secondary" href="{{ path('app_user_index') }}"><i class="fa-solid fa-arrow-left me-3"></i>Retour Ã  la liste</a>
        <h1 class="text-center">User</h1>
    </div>

    <table class="table table-striped container">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            {# <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr> #}
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>{{ user.avatar }}</td>
            </tr>
            <tr>
                <th>IsSubscribed</th>
                <td>{{ user.isSubscribed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="container">
        <a class="btn btn-success" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
