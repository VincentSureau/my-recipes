{% extends 'base.html.twig' %}

{% block title %}Season index{% endblock %}

{% block body %}
<main class="container d-flex flex-column">
    <h1 class="text-center">Season index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Start at</th>
                <th>End at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.id }}</td>
                <td>{{ season.name }}</td>
                <td>{{ season.startAt ? season.startAt|date('d/m/Y') : '' }}</td>
                <td>{{ season.endAt ? season.endAt|date('d/m/Y') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_season_crud_show', {'id': season.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_season_crud_edit', {'id': season.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success mx-auto" href="{{ path('app_season_crud_new') }}">Create new</a>
</main>
{% endblock %}
